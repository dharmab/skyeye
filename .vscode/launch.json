    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "docker-compose-debug-up",
            "name": "Debug in Docker Compose",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "attach",
            "mode": "remote",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/app"
                }
            ],
            "host": "127.0.0.1",
            "port": 2345,
            "postDebugTask": "docker-compose-down"
        }
    ]
}